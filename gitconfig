[alias]
	b = branch
	c = commit
	co = checkout
	d = diff
	ds = diff --staged
	f = fetch
	l = log --oneline
	s = status --short --branch
	st = status
	sw = switch
	up = pull --autostash
[include]
	path = ~/.config/git/config.local
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
	tool = nvimdiff
[pull]
	rebase = true
[push]
	default = simple
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
	pushInsteadOf = https://github.com/
