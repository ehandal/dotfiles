[alias]
	a = add
	b = branch
	c = commit
	co = checkout
	d = diff
	ds = diff --staged
	f = fetch
	l = log --oneline
	p = pull
	rb = rebase
	rbi = rebase --interactive
	s = status --short --branch
	sh = show
	st = status
	sta = stash
	stap = stash apply
	std = stash drop
	stl = stash list
	stp = stash pop
	sts = stash save
	stsh = stash show
	sw = switch
	up = pull --autostash
	wt = worktree
	wta = worktree add
	wtl = worktree list
	wtm = worktree move
	wtr = worktree remove
[include]
	path = ~/.config/git/config.local
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
	tool = nvimdiff
[pull]
	rebase = true
[push]
	default = simple
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
	pushInsteadOf = https://github.com/
